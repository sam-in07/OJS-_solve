void her_husband() {
   ll x , y , i , j ;
    cin >> x >> y ;
    ll val_x = x - 1 ;
    ll val_y = y -1 ;

    if(x>=y) {
        if(x%2==0) {
             cout << pow(val_x,2) + x + (x-y) << endl;
             // (val_x)^2 make  a square + then add a colume + (x-y) ===> make i*i matrix 
             
        }
        else {
            cout << pow(val_x,2)+y << endl;

        }
        return ;
    }

    if(y%2==0) {
        cout << pow(val_y,2) + x << endl;
        return;
    }
    cout << pow(val_y,2) + y + (y-x) << endl;
    

}

