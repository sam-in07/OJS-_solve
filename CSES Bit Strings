 const long long MOD = 1000000007;

void her_husband() {
  int n;
    cin >> n;

    long long result = 1;
    long long base = 2;

    while (n > 0) {
        if (n % 2 == 1) 
        { // If n is odd, multiply the base with result
            result = (result * base) % MOD;
        }
        base = (base * base) % MOD; 
        n /= 2; 
    }

    cout << result << endl;
    

}

